<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <title>Create A Quiz</title>
  </head>

  <body>

    <%- include('partials/_header') %>

    <main style="margin: 5em;">
        <h3>Create A Quiz</h3>
        <button class="btn btn-primary" onclick="addQuestion()">Add a Question</button>
        <form action="/new" method="POST">
          <div class="form-group">
            <label for="name">Quiz Name</label>
            <input type="text" name="name" style="width: 300px; margin: 1em">
            <br>
            <input class="form-check-input" type="checkbox" name="public" value="public">
            <label class="form-check-label" for="public">Public</label>
            <br>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </main>

      <script>
      let questionCount = 1;
      function addQuestion() {
        $(".form-group").append(
        "<label for=\"question" + questionCount +"\">Question "+ 
          questionCount +"</label><input type=\"text\" name=\"question" + 
          questionCount + "\">" +
          "<label for=\"answer" + questionCount +"\">Answer "+ 
          questionCount +"</label><input type=\"text\" name=\"answer" + 
          questionCount + "\"><br><br>");
        questionCount++;
      }
      </script>
      <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
      <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>